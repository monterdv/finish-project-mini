<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="POST" action="/users/signin" class="form-signin" novalidate>
        <h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>
          {{#if hasErrors }}
            <div class="alert alert-danger">
                {{#each messages }}
                <p>{{this}}</p>
                {{/each }}
            </div>
            {{/if}}
        <div class="social-login">
          <button class="btn btn-primary btn-block" type="button">
            <span><i class="fab fa-facebook-f"></i> Sign in with Facebook</span>
          </button>
          <button class="btn btn-danger btn-block" type="button">
            <span><i class="fab fa-google-plus-g"></i> Sign in with Google+</span>
          </button>
        </div>
        <p class="text-center">OR</p>
        <div class="form-group">
          <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required autofocus>
        </div>
        <div class="form-group">
          <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
        </div>
        <div class="form-group">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
          <button class="btn btn-md btn-block btn-primary" type="submit">
            <i class="fas fa-sign-in-alt"></i> Sign in
          </button>
        </div>
        <hr>
        
          <a href="/users/signup">Sign up New Account !!</a> 
      </form>
    </div>
  </div>
</div>
